// Шифрование пароля
function PassEncrypt(str) {
    var s = [], n = 0;
    for (var i = 0, l = str.length; i < l; i++) {
        s[n++] = ('000' + (6 ^ str.charCodeAt(i))).replace(/.*(.{4})$/, '$1');
    }
    return s.join('');
}

// Дешифрование пароля
function PassDecrypt(str) {
    var s = [], n = 0;
    for (var i = 0, l = str.length; i < l; i += 4) {
        s[n++] = String.fromCharCode(6 ^ Number(str.slice(i, i + 4)));
    }
    return s.join('');
}

