// Создание выборки из БД (по выставленным на панели инструментов датам и типам сообщений)
function CreateDBSelect() {
    if (!CorrectDate(Toolbar.idDateInput[0]) || !CorrectDate(Toolbar.idDateInput[1])) {
        return;
    }

    var tb = Toolbar.idPostType;
    var tb_posttype = tb.options[tb.selectedIndex].value;
    var posttype = tb_posttype === '*' ?
        ' IN ({0})'.format(allowed_forms) : "='{0}'".format(tb_posttype);
    var sql_posts_string = 'SELECT * FROM elo_arh_post WHERE posttype{0} '.format(posttype) +
        'and dt between ? and ? ORDER BY posttype, dt, filetype';
    var sql_forms_string = 'SELECT DISTINCT posttype FROM elo_arh_post WHERE posttype IN ({0}) '.format(allowed_forms) +
        'and dt between ? and ?';

    var period;
    Preview.document.body.innerHTML = 'Загрузка посылок...';
    if (/^DSN=/.test(db_connect_string)) {
        period = [
            Toolbar.idDateInput[0].value,
            GetDate(1, Toolbar.idDateInput[1].value)
        ];
    } else {
        period = [
            GetDateSQL(0, Toolbar.idDateInput[0].value),
            GetDateSQL(1, Toolbar.idDateInput[1].value)
        ];
    }
    arrDB = QueryDatabase(sql_posts_string, period);
    UpdateFormsList(QueryDatabase(sql_forms_string, period));
}

// Создание обработчика для каждой отдельной строки
function createOneHandler(number) {
    return function() {
        parent.cursor_row_idx = number;
        parent.PostList.idCursor.style.top = this.offsetTop - 1;
    };
}

// Составление списка рейсов
function CreatePostsList() {
    // Возвращает имя формы по типу поста
    function GetFormName(post_type) {
        var tb = Toolbar.idPostType;
        var i = tb.length;
        while (i--) {
            if (tb.options[i].value === post_type) {
                return tb.options[i].text;
            }
        }
    }

    function GetHTMLTablePass1() {
        var HTMLtable = [];
        HTMLtable.push('<table frame="void"><tr id=idRow><td><td><td><td><td><td>');
        var form_name_prev = '';
        for (var i = 1; i < arrDB_length; i++) {
            // ------ Построение списка посылок -----------------------------------------------------------
            var RowOfDBTable = arrDB[i];
            var pt = RowOfDBTable.posttype;
            if (pt !== form_name_prev) {
                HTMLtable.push('<tr><th colspan=6>', GetFormName(pt));
                form_name_prev = pt;
            }
            var fname = RowOfDBTable.filename.replace(/\.[^.]+$/, '');
            var st = RowOfDBTable.state_;
            HTMLtable.push('<tr id=idRow>',
                '<td class="icon" style="color:black">',
                    st == '6' ? '&#xDB;' :
                    st == '7' ? '&#xDC;' : '',
                '<td style="color:black">', RowOfDBTable.filetype,
                '<td>',
                '<td><s>', Date2Log(new Date(RowOfDBTable.dt)), '</s>',
                '<td>', fname,
                '<td style="display:none"></td>');
            // -----------------------------------------------------------------------------------------
        }
        HTMLtable.push('</table>\
<table id=idCursor style="font-size:14px; border-collapse:collapse; border:1px dotted highlight; position:absolute; width:100%; top:-20px;">\
<tr><td>&nbsp;</td></tr></table>');
        return HTMLtable.join('');
    }

    function SetHTMLTablePass2() {
        for (var i = 1; i < arrDB_length; i++) {
            var fname = arrDB[i].filename;
            var post_content = Cache[fname]; // вначале пробуем получить из кеша
            if (post_content) { // если данные по запрошенному файлу есть в объекте Cache
                var Row = PostList.idRow[i];
                var color = post_content.state;
                Row.cells[0].style.color = color;
                Row.cells[1].style.color = color;
                Row.cells[2].innerHTML = post_content.info;
            }
        }
    }

    function SetHTMLTablePass3() {
        var percent, percent_prev = 0;
        var Progress = Preview.document.body;
        for (var i = 1; i < arrDB_length; i++) {
            var Row = PostList.idRow[i];
            if (!Row.cells[5].innerHTML) {
                var fname = arrDB[i].filename;
                var post_content = Cache[fname]; // вначале пробуем получить из кеша
                if (!post_content) { // если данных по запрошенному файлу нет в объекте Cache
                    if (cache_filepath && FSO.FileExists(cache_filepath) && 
                        cache_DateLastModified !== FSO.GetFile(cache_filepath).DateLastModified) {
                        // если кеш на диске был кем то изменен
                        LoadCache(); // грузим кеш по-новой
                        post_content = Cache[fname]; // и вновь пробуем получить из кеша
                    }
                }
                if (!post_content) { // если данных по запрошенному файлу нет в объекте Cache
                    post_content = GetObjPostContent(GetCurrentFile(i), i); // извлекаем данные самостоятельно
                }
                var color = post_content.state;
                Row.cells[0].style.color = color;
                Row.cells[1].style.color = color;
                Row.cells[2].innerHTML = post_content.info;
                Row.cells[5].innerHTML = post_content.preview;
                // -----------------------------------------------------------------------------------------
                percent = Math.round(i / arrDB_length * 100);
                if (percent > percent_prev) {
                    Progress.innerHTML = '\
<table><tr><td>Загрузка содержимого файлов...<td width=50%">\
<div id=idProgress style="width:{0}%;">{0}%</div>\
</table>'.format(percent);
                    percent_prev = percent;
                }
            }
        }
    }

    function SetHTMLTablePass4() {
        for (var i = 1; i < arrDB_length; i++) {
            PostList.idRow[i].onmouseover = createOneHandler(i);
        }
    }

    var status = Preview.document.body;
    if (!db_connect_string) {
        status.innerHTML = 'Нет связи с базой данных ПТК ПСД'.fontcolor('red');
        Toolbar.idToolbar.disabled = false;
        return;
    }
    // -----------------------------------------------
    if (arrDB.length > 0) {
        status.innerHTML = 'Загрузка форм...';
        // добавляем пустышку для того, чтобы к узлам idRow всегда можно было обратиться по индексу
        arrDB.unshift({}); // добавляем пустышку в начало массива, чтобы индекс его элементов соответствовал индексу узлов
        var arrDB_length = arrDB.length;
        PostList.document.body.innerHTML = GetHTMLTablePass1();

        status.innerHTML = 'Загрузка кеша...';
        SetHTMLTablePass2();

        status.innerHTML = 'Загрузка содержимого файлов...';
        SetHTMLTablePass3();

        // добавляем эвенты
        SetHTMLTablePass4();
        PostList.idCursor.onmouseup = function() { // клик мыши по курсорной строке
            parent.SelectRow(parent.cursor_row_idx);
            if (PostList.event.button === 2) { // если нажата правая кнопка
                parent.ShowContextMenu(parent.PostList);
            }
        };
        status.innerHTML = 'Выберите посылку для просмотра'.fontcolor('green');
    } else {
        PostList.document.body.innerHTML = '<center><span disabled>пусто</span></center>';
        status.innerHTML = 'Выберите дату для просмотра'.fontcolor('green');
    }
    KeepInfoToCache();
    setTimeout(SaveCache, 0);
    Toolbar.idToolbar.disabled = false;
    select_row_idx = undefined;
}

// Запуск ф-ции CreatePostsList отдельным процессом
function StartCreatePostsList(shiftKey) {
    HidePreview();
    if (shiftKey) {
        DeleteCache();
    }
    find_text = '';
    Preview.document.body.innerHTML = 'Загрузка таблицы...';
    Toolbar.idToolbar.disabled = true;
    setTimeout(function() {
        CreateDBSelect();
        CreatePostsList();
    }, 0);
}

//=====================================================
//  ФУНКЦИИ СТАРТА
//=====================================================

function LoadActiveX() {
    var caption = 'Создание объектов ActiveX';
    try { // Инициализация объектов ActiveX
        WshShell = new ActiveXObject('WScript.Shell');
        FSO = new ActiveXObject('Scripting.FileSystemObject');
    } catch (e) {
        ErrBox('Установите Windows Script Host', caption);
        return false;
    }
    return true;
}

// Централизованное обновление версий с эталона на сервере
function CheckUpdate() {
    var caption = 'Проверка обновлений';
    var distr = PathCombine(ptk_psd_dir, 'PTK_PSD_Browser', 'PTK_PSD_Browser.hta');
    if (distr === PathCombine(script_path, 'PTK_PSD_Browser.hta')) {
        return; // same file
    }

    if (FSO.FileExists(distr)) {
        var distr_header = ReadFile(distr, 512, 'utf-8');
        if (/version=\"(\d*\.\d*\.\d*)\"/i.test(distr_header)) {
            var distr_version = RegExp.$1;
            if (cmpVersions(hta_App.version, distr_version) < 0) {
                //MsgBox('Ваша версия {0} устарела и сейчас будет обновлена до {1}'
                //    .format(hta_App.version, distr_version), caption);
                var this_script = unescape(document.URL).replace(/^file:\/\//, '');

                // Возвращает ProcessId нашего приложения
                var pid = WshShell.Exec('rundll32 kernel32,Sleep').ProcessID;
                var oProc = new Enumerator(GetObject('winmgmts:\\\\.\\root\\cimv2')
                    .ExecQuery('select * from Win32_Process where ProcessId={0}'.format(pid))).item();
                var parent_id = oProc.ParentProcessId;
                oProc.Terminate();

                // Перезапуск приложения с загруженной новой версией с сервера
                var cmd = PathCombine(WshShell.ExpandEnvironmentStrings('%temp%'), 'ptk_restart.cmd');
                var rst_text = [
                    '@echo off',
                    'chcp 1251 > nul',
                    'ping -n 3 -w 1000 127.0.0.1 > nul',
                    'taskkill /f /pid ' + parent_id,
                    'ping -n 2 -w 1000 127.0.0.1 > nul',
                    'copy/y "{0}" "{1}" > nul'.format(distr, script_path),
                    'start "" "{0}"'.format(this_script)
                ]; //'PTK_PSD_Browser.hta'
                SaveFile(cmd, rst_text.join('\n'));
                WshShell.Run(cmd, 0, true);
            }
        }
    }
}

function CheckINIs() {
    var caption = 'Чтение INI-файлов';
    var args = ReadArgs();
    var ini1, ini2;
    switch (args.length - 1) {
    case 2: //hta elo.ini browser.ini
        ini1 = WshShell.ExpandEnvironmentStrings(args[1]);
        ini2 = WshShell.ExpandEnvironmentStrings(args[2]);
        break;
    case 1: //hta elo.ini
        ini1 = WshShell.ExpandEnvironmentStrings(args[1]);
        ini2 = PathCombine(script_path, 'PTK_PSD_Browser.ini');
        break;
    default: //hta only
        ini1 = PathCombine(WshShell.ExpandEnvironmentStrings('%WINDIR%'), 'elo.ini');
        ini2 = PathCombine(script_path, 'PTK_PSD_Browser.ini');
    }

    var ini1ok = FSO.FileExists(ini1);
    var ini2ok = FSO.FileExists(ini2);

    if (!ini2ok) { // Нет browser.ini
        ErrBox([
            'Файл настроек ПТК ПСД', ini1 + (ini1ok ? '' : '\nне найден'), '',
            'Файл настроек Обозревателя', ini2 + (ini2ok ? '' : '\nне найден'), '',
            'Если используются другие - укажите их в ярлыке'].join('\n'),
            caption);
        return false;
    }

    ReadINIFile(ini1);
    ReadINIFile(ini2);

    INI.Path.elo_ini = ini1;
    INI.Path.browser_ini = ini2;

    if (!INI.Path.PTKPSD && !INI.Path.HOME) {
        ErrBox('Не задан каталог установки ПТК ПСД\n(Path.PTKPSD или Path.HOME)', caption);
        return false;
    }

    ptk_psd_dir = INI.Path.PTKPSD ?
        INI.Path.PTKPSD :
        INI.Path.HOME.replace(/[^\\]*$/, '');
    if (!FSO.FolderExists(ptk_psd_dir)) {
        ErrBox(['Не найден каталог установки ПТК ПСД', ptk_psd_dir].join('\n'), caption);
        return false;
    }

    if (!INI.User.CurBik) {
        ErrBox('Не задан БИК (User.CurBik)', caption);
        return false;
    }
    bank_code = INI.User.CurBik.replace(/.*(\d{3})$/, '$1');

    Toolbar.idByPostType.checked = INI.BrowserSettings.by_posttype_checked === '1';
    return true;
}

function CheckDB() {
    var caption = 'Подключение к базе';
    var ODBC = INI.DataBase.ODBC;
    var FDSN = INI.DataBase.FILEDSN;
    db_connect_string = INI.DataBase.db_connect_string;

    if (ODBC || FDSN || db_connect_string) {
        if (ODBC) {
            db_connect_string = 'DSN={0};'.format(ODBC);
        } else if (FDSN) {
            if (!FSO.FileExists(FDSN)) {
                ErrBox(['Не найден файловый DSN', FDSN].join('\n'), caption);
                return false;
            }
            db_connect_string = 'FILEDSN={0};'.format(FDSN);
        }

        var user = INI.DataBase.user;
        if (user) {
            if (ODBC || FDSN) {
                db_connect_string += 'UID={0};'.format(user);
            } else {
                db_connect_string = db_connect_string.replace(/%user%/, user);
            }
        }

        var ini_text = ReadFile(INI.Path.browser_ini);
        if (/^[ \t]*password[ \t]*=/im.test(ini_text)) {
            var password = INI.DataBase.password;
            if (password === undefined) {
                password = prompt('Введите пароль доступа к базе данных:', '');
                if (!password) {
                    ErrBox('Не задан пароль доступа', caption);
                    return false;
                }
                ini_text = ini_text.replace(/^([ \t]*password[ \t]*=).*$/im,
                    '$1' + PassEncrypt(password));
                SaveFile(INI.Path.browser_ini, ini_text);
            }
            var m = password.match(/(\d{4})/g);
            if (m && m.join('') === password) {
                password = PassDecrypt(password);
            }
            if (password) {
                if (ODBC || FDSN) {
                    db_connect_string += 'PWD={0};'.format(password);
                } else {
                    db_connect_string = db_connect_string.replace(/%password%/, password);
                }
            }
        }
    } else {
        var database = PathCombine(ptk_psd_dir, 'Database', 'etalon97.mdb');
        if (!FSO.FileExists(database)) {
            ErrBox(['Не найден файл базы данных по умолчанию', database].join('\n'), caption);
            return false;
        }
        db_connect_string = 'Driver={Microsoft Access Driver (*.mdb)};DBQ={0}'
            .format(database);
    }

    // Проверка зарегистрирован ли пользователь?
    var usrname = INI.User.CurUser;
    if (!usrname) {
        usrname = WshShell.ExpandEnvironmentStrings('%username%');
    }
    document.title += ' [{0}]'.format(usrname);

    var q = TryQueryDatabase('SELECT usrname FROM elo_users');
    if (q.Error) {
        ErrBox(['Нет связи с базой данных', q.Description].join('\n'), caption);
        db_connect_string = '';
        return false;
    }

    var all_users = q.Result;
    var i = all_users.length;
    while (i--) {
        if (usrname.toLowerCase() === all_users[i].usrname.toString().toLowerCase()) {
            INI.User.CurUser = usrname;
            return true;
        }
    }
    ErrBox(['В ПТК ПСД не зарегистрирован', usrname].join('\n'), caption);
    return false;
}

function CheckPaths() {
    var caption = 'Проверка путей и файлов';
    store_dir = PathCombine(ptk_psd_dir, store_dir);

    cache_filepath = INI.BrowserSettings.cache;
    if (cache_filepath) {
        if (/^(%|[A-Z]:\\|\\\\)/i.test(cache_filepath)) {
            cache_filepath = WshShell.ExpandEnvironmentStrings(cache_filepath);
        } else {
            cache_filepath = PathCombine(script_path, cache_filepath);
        }
    }

    unpacker = PathCombine(script_path, unpacker);
    if (!FSO.FileExists(unpacker)) {
        ErrBox('Не найден архиватор\n{0}'.format(unpacker), caption);
        return false;
    }

    // Задание временного каталога
    tmp_dir = PathCombine(WshShell.ExpandEnvironmentStrings(tmp_dir), '$ptk$');
    if (!FSO.FolderExists(tmp_dir)) {
        FSO.CreateFolder(tmp_dir);
    }
    return true;
}

// Действия при старте приложения
function Start() {
    document.title = '{0} - {1}'.format(hta_App.applicationName, hta_App.version);

    if (!LoadActiveX()) {
        Halt();
        return;
    }

    // Вычисляем путь к данному скрипту
    script_path = unescape(document.URL).replace(/^file:\/\/(.+?)[^\\]+$/, '$1');
    CheckUpdate();

    AddTrustedSites(); // Если скрипт расположен на сетевом диске, то добавляем хост в список доверенных сайтов
    AddTimeForScript();

    // Узнаем, какой символ используется в качестве разделителя в дате
    sd = WshShell.RegRead('HKCU\\Control Panel\\International\\sDate');

    // Присвоение значений глобальным переменным и подключение к БД
    CheckINIs();
    CheckPaths();
    CheckDB();

    LoadCache();            // Загружаем кеш с сохраненными ранее данными
    load_RCMenu();          // Подготавливем контестное меню
    CreateFormList();       // Загружаем в раскрывающийся список <SELECT> имена обрабатываемых форм
    CheckCalendarActiveX(); // Инициализация (и установка при необходимости) AxCalendar
    SetInterval(0);         // Задаем интервал для выборки - текущий день

    if (db_connect_string) {
        // Рабочие размеры окна приложения
        window.moveTo(50, 20);
        window.resizeTo(screen.width - 100, screen.height - 70);
    }

    Toolbar.idToolbar.disabled = false;
}

// Функция закрытия приложения
function Halt() {
     var ie7 = (document.all && !window.opera && window.XMLHttpRequest) ? true : false;  
     if (ie7) {
         // This method is required to close a window without any prompt for IE7 & greater versions.
         window.open('', '_parent', '');
         window.close();
     } else {
         // This method is required to close a window without any prompt for IE6
         this.focus();
         self.opener = this;
         self.close();
     }
}
</script>
